extends layout

block content

  .main-content

    .header
      nav
        ul
          li: a#about-btn(href="#about") about
          li: a#skills-btn(href="#skills") skills
          li: a#projects-btn(href="#work") projects
          li: a#contact-btn(href="#contact-anchor") contact

    section#home.home--container
      .home--background

      .home--content.show-for-large
        .intro--text.rellax
          h1 Hi! I'm Kelsey.
          h1 I'm a developer based in Los Angeles, CA.

        include includes/editor.pug

        //- .scroll-btn-container
        //-   a.scroll-btn(href= "#about")
